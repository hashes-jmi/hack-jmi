<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.tanishqsaluja.beep.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:paddingTop="20sp"
        android:textSize="50sp"
        android:paddingLeft="60sp"
        android:textColor="#FFFF"
        android:id="@+id/welcometext"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcometext"
        android:paddingTop="40sp"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:id="@+id/introtext"
        android:text="CareAid an app to keep your loved ones safe and get in touch just by one touch on your smartphone"/>

    <ImageButton
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="#00000000"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="140sp"
        android:layout_above="@+id/button"
        android:src="@drawable/logo"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:text="Configure"

        android:id="@+id/button" />


</RelativeLayout>
